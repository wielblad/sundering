{
  "name": "sundering-moba",
  "version": "0.1.0",
  "private": true,
  "description": "Sundering - 3D Browser-Based MOBA Game",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:client": "pnpm --filter @sundering/client dev",
    "dev:server": "pnpm --filter @sundering/server dev",
    "build:client": "pnpm --filter @sundering/client build",
    "build:server": "pnpm --filter @sundering/server build",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
